.txt {
  font-weight: bold;
}

.arrow{
  width: 12px;
  height: 12px;
  border-top: 2px solid rgba(128, 128, 128, 0.726);
  border-right: 2px solid rgba(128, 128, 128, 0.726);
  transform: rotate(45deg);
}
.arrow-view{
  width: 50%;
}
.copytight{
  font-size: 24rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  text-align: center;
  margin-bottom: 10rpx;
}


.page {
  height: 100Vh;
  width: 100vw;
}

.page.show {
  overflow: hidden;
}

.switch-sex::after {
  content: "\e716";
}

.switch-sex::before {
  content: "\e7a9";
}

.switch-music::after {
  content: "\e66a";
}

.switch-music::before {
  content: "\e6db";
}

.searchicon {
  position: relative;
    display: block;
    margin-top: 20rpx;
    width: 100%;
    font-size: 30rpx;
}